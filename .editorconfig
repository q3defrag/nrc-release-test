[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

trim_trailing_whitespace = true
indent_style = tab


[*.py]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{c,cc,cpp,h,hh,hpp}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

[*.md]
indent_style = tab
trim_trailing_whitespace = false
